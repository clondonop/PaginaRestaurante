    <link rel="stylesheet" href="assets/css/Lista-Productos-Canito.css">
    <link rel="stylesheet" href="assets/css/Navigation-Clean.css">
    <link rel="stylesheet" href="assets/css/styles.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <img id="icononav" src="./assets/Images/crab.png" alt="" style="height: 64px;">
        <a class="navbar-brand" href="#">El crustáceo cascarudo</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Clientes">Clientes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="TarjetaCredito">Tarjetas de crédito</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Proveedores">Proveedores</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Direcciones">Direcciones</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="Factura">Facturas</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Inventarios
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="Inventario">Inventario</a>
                        <a class="dropdown-item" href="producto_inventario">Inventario/Producto</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Compras
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="Compras">Compras</a>
                        <a class="dropdown-item" href="compra_inventario">Compras/Inventario</a>
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Productos
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="Productos">Productos</a>
                        <a class="dropdown-item" href="producto_factura">Producto/Factura</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div style="padding: 39px;border-style: none;">
        <div class="container" style="border-style: none;border-color: var(--secondary);">
            <div class="row" style="border-style: none;margin-top: 11px;">
                <div class="col-md-4">
                    <h2 style="width: 343px;margin-top: 6px;">Relacion de productos e inventarios</h2>
                </div>
                <div class="col-md-4 d-flex justify-content-center align-items-center"
                    style="padding-top: 0px;border-color: rgb(0,0,0);"><button
                        onclick="location.href='inventario_productoeditado'"
                        class="btn btn-primary d-flex align-items-center align-self-center" type="button"
                        style="height: 38px;padding-top: 6px;margin-top: 8px;background: rgb(0,24,255);border-color: rgb(0,25,255);">Agregar
                        Campo&nbsp;<i class="fa fa-plus-circle"></i></button></div>
            </div>
            <div class="row">
                <div class="col-md-12" style="width: 1083px;">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID Inventario</th>
                                    <th>Inventario</th>
                                    <th>ID Producto</th>
                                    <th>Producto</th>
                                    <th>Eliminar</th>
                                    <th>Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0 ; i < data.length ; i++){ %>
                                    <tr>
                                        <td>
                                            <%= data[i].idInventario %>
                                        </td>
                                        <td>
                                            <%= data[i].inventario %>
                                        </td>
                                        <td>
                                            <%= data[i].idProducto %>
                                        </td>
                                        <td>
                                            <%= data[i].producto %>
                                        </td>

                                        <td><a
                                                href='/producto_inventario/delete/<%= data[i].idProducto %>/<%= data[i].idInventario %>'><button
                                                    class="btn btn-danger" type="button"
                                                    style="width: 36.3px;height: 32px;background: rgb(255,0,24);margin-bottom: 0px;margin-right: 0px;margin-left: 0px;padding-top: 3px;padding-right: 8px;padding-left: 8px;padding-bottom: 0px;"><i
                                                        class="fas fa-window-close"
                                                        style="padding-bottom: 29px;width: 16px;height: 0px;margin-bottom: 0px;"
                                                        onclick="console.log(`<%= data[i].idProducto %>`)"></i></button></a>
                                        </td>
                                        <td><button class="btn btn-primary" type="button"
                                                style="width: 36.3px;height: 32px;background: rgb(0, 153, 255);margin-bottom: 0px;margin-right: 0px;margin-left: 0px;padding-top: 3px;padding-right: 8px;padding-left: 8px;padding-bottom: 0px;"><i
                                                    class="fas fa-edit"
                                                    style="padding-bottom: 29px;width: 16px;height: 0px;margin-bottom: 0px;"></i></button>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>