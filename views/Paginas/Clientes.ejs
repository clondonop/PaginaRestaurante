            </ul>
        </div>
    </nav>
    <div style="padding: 39px;border-style: none;">
        <div class="container" style="border-style: none;border-color: var(--secondary);">
            <div class="row" style="border-style: none;margin-top: 11px;">
                <div class="col-md-4">
                    <h2 style="width: 343px;margin-top: 6px;">Lista de clientes</h2>
                </div>
                <div class="col-md-4 d-flex justify-content-center align-items-center"
                    style="padding-top: 0px;border-color: rgb(0,0,0);">
                    <button
                        onclick="location.href='clienteseditado'"
                        class="btn btn-primary d-flex align-items-center align-self-center" type="button"
                        style="height: 38px;padding-top: 6px;margin-top: 8px;background: rgb(0,24,255);border-color: rgb(0,25,255);">Agregar
                            Cliente&nbsp;<i class="fa fa-plus-circle"></i>
                    </button></div>
            </div>
            <div class="row">
                <div class="col-md-12" style="width: 1083px;">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="thead-light">
                                <tr>
                                    <th>idClientes</th>
                                    <th>Nombre</th>
                                    <th>Apellido_1</th>
                                    <th>Genero</th>
                                    <th>Fecha_nac</th>
                                    <th>Telefono</th>
                                    <th >Correo</th>
                                    <th>Direccion</th>
                                    <th>tipo_id</th>
                                    <th>Eliminar</th>
                                    <th>Editar</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i = 0 ; i < clientes.length ; i++){ %>
                                <tr>
                                    <td id=`idcliente${i}`><%= clientes[i].idClientes %></td>
                                    <td><%= clientes[i].Nombre %></td>
                                    <td><%= clientes[i].Apellido_1 %></td>
                                    <td><%= clientes[i].Genero== 0 ? "F":"M" %></td>
                                    <td><%= new Intl.DateTimeFormat('en-GB', { year: 'numeric', month: 'long', day: '2-digit'}).format(clientes[i].Fecha_nac) %></td>
                                    <td><%= clientes[i].Telefono %></td>
                                    <td><%= clientes[i].Correo %></td>
                                    <td><%= clientes[i].Direccion %></td>
                                    <td><%= clientes[i].tipo_id %></td>

                                    <td><a href='/clientes/delete/<%= clientes[i].idClientes %>'><button class="btn btn-danger" type="button"
                                            style="width: 36.3px;height: 32px;background: rgb(255,0,24);margin-bottom: 0px;margin-right: 0px;margin-left: 0px;padding-top: 3px;padding-right: 8px;padding-left: 8px;padding-bottom: 0px;"><i
                                                class="fas fa-window-close"
                                                style="padding-bottom: 29px;width: 16px;height: 0px;margin-bottom: 0px;"
                                                onclick="console.log(`<%= clientes[i].idClientes %>`)"></i></button></a>
                                    </td>
                                    <td><a href='/clientes/edit/<%= clientes[i].idClientes %>'><button class="btn btn-primary" type="button"
                                        style="width: 36.3px;height: 32px;background: rgb(0, 153, 255);margin-bottom: 0px;margin-right: 0px;margin-left: 0px;padding-top: 3px;padding-right: 8px;padding-left: 8px;padding-bottom: 0px;"><i
                                            class="fas fa-edit"
                                            style="padding-bottom: 29px;width: 16px;height: 0px;margin-bottom: 0px;"></i></button></a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>